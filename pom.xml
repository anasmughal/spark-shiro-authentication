	    <plugins>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-jxr-plugin</artifactId>
	        <version>3.0.0</version>
	      </plugin>
	    </plugins>
	</reporting>




</project>
